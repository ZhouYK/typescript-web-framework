{
  "name": "typescript-web-framework",
  "version": "0.0.1",
  "description": "typescript 脚手架",
  "sideEffects": [
    "*.css",
    "*.less"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "client/**/*.{ts,tsx}": [
      "tslint --fix"
    ],
    "client/**/*.less": [
      "stylelint --fix --syntax less"
    ],
    "tests/*": [
      "jest"
    ]
  },
  "scripts": {
    "start": "webpack-dev-server --config ./webpack/webpack.config.dev.babel.js",
    "dll": "cross-env NODE_ENV=production webpack --config ./webpack/webpack.config.dll.babel.js &&cross-env NODE_ENV=development webpack --config ./webpack/webpack.config.dll.babel.js",
    "build": "webpack --env=local --progress --config  ./webpack/webpack.config.babel.js",
    "build:prod": "webpack --env=prod --progress --config  ./webpack/webpack.config.babel.js",
    "build:stage": "webpack --env=stage --progress --config  ./webpack/webpack.config.babel.js",
    "build:test": "webpack --env=test --progress --config  ./webpack/webpack.config.babel.js",
    "build:dev": "webpack --env=dev --progress --config  ./webpack/webpack.config.babel.js"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(glue-redux)/)"
    ],
    "globals": {
      "BABEL_ENV": "test"
    }
  },
  "dependencies": {
    "@types/react": "~16.7.6",
    "@types/react-dom": "~16.0.9",
    "@types/react-loadable": "~5.4.0",
    "@types/react-redux": "~6.0.5",
    "@types/react-router-dom": "~4.3.0",
    "autoprefixer": "~7.1.1",
    "axios": "~0.18.0",
    "babel-cli": "~6.23.0",
    "babel-core": "~6.26.3",
    "babel-loader": "~7.1.4",
    "babel-plugin-import": "~1.8.0",
    "babel-plugin-syntax-async-functions": "~6.13.0",
    "babel-plugin-syntax-dynamic-import": "~6.18.0",
    "babel-plugin-transform-class-properties": "~6.24.1",
    "babel-plugin-transform-es3-member-expression-literals": "~6.22.0",
    "babel-plugin-transform-es3-property-literals": "~6.22.0",
    "babel-plugin-transform-object-rest-spread": "~6.26.0",
    "babel-plugin-transform-runtime": "~6.23.0",
    "babel-preset-env": "~1.6.1",
    "babel-preset-react": "~6.24.1",
    "clean-webpack-plugin": "~0.1.19",
    "cross-env": "~5.2.0",
    "css-loader": "~0.28.11",
    "es6-promise": "~4.2.5",
    "glue-redux": "~3.2.2",
    "happypack": "~5.0.0",
    "history": "~4.7.2",
    "html-webpack-plugin": "~3.2.0",
    "less": "~3.0.4",
    "less-loader": "~4.1.0",
    "lodash": "~4.17.10",
    "mini-css-extract-plugin": "~0.4.1",
    "normalize.css": "~8.0.0",
    "optimize-css-assets-webpack-plugin": "~3.2.0",
    "postcss-flexbugs-fixes": "~3.3.1",
    "postcss-loader": "~2.1.5",
    "prop-types": "~15.6.2",
    "react": "~16.6.3",
    "react-dom": "~16.6.3",
    "react-glux": "~1.1.4",
    "react-loadable": "~5.4.0",
    "react-redux": "~5.0.7",
    "react-router": "~4.3.1",
    "react-router-dom": "~4.3.1",
    "redux": "~3.5.2",
    "speed-measure-webpack-plugin": "~1.2.3",
    "style-loader": "~0.21.0",
    "ts-loader": "~4.4.2",
    "typescript": "~3.1.6",
    "uglifyjs-webpack-plugin": "~1.2.7",
    "webpack": "~4.15.0",
    "webpack-cli": "~2.0.4",
    "webpack-manifest-plugin": "~2.0.3"
  },
  "devDependencies": {
    "@types/jest": "~23.3.9",
    "@types/redux-devtools": "~3.0.44",
    "@types/redux-devtools-dock-monitor": "~1.1.32",
    "@types/redux-devtools-log-monitor": "~1.0.33",
    "ajv": "~6.5.5",
    "husky": "~1.0.0",
    "jest": "~23.6.0",
    "lint-staged": "~7.3.0",
    "redux-devtools": "~3.4.1",
    "redux-devtools-dock-monitor": "~1.1.3",
    "redux-devtools-log-monitor": "~1.4.0",
    "stylelint": "~9.5.0",
    "stylelint-config-standard": "~18.2.0",
    "ts-jest": "~23.10.4",
    "tslint": "~5.10.0",
    "tslint-config-airbnb": "~5.9.2",
    "tslint-eslint-rules": "~5.3.1",
    "tslint-loader": "~3.5.4",
    "tslint-react": "~3.6.0",
    "tsutils": "~3.5.0",
    "webpack-dev-server": "~3.1.4"
  }
}
