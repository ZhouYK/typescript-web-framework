{
  "name": "typescript-web-framework",
  "version": "0.0.1",
  "description": "typescript 脚手架",
  "sideEffects": [
    "*.css",
    "*.less"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "src/**/*.less": [
      "stylelint --fix --syntax less"
    ],
    "src/**/*.css": [
      "stylelint --fix"
    ],
    "test/": [
      "npm run test"
    ]
  },
  "scripts": {
    "test": "jest --no-cache",
    "start": "cross-env NODE_OPTIONS=--max_old_space_size=4096 NODE_ENV=development webpack serve --hot --config ./webpack/webpack.config.dev.babel.js",
    "build": "cross-env NODE_ENV=production webpack --env local --config  ./webpack/webpack.config.babel.js",
    "build:prod": "cross-env NODE_ENV=production webpack --env prod --config  ./webpack/webpack.config.babel.js",
    "build:stage": "cross-env NODE_ENV=production webpack --env stage --config  ./webpack/webpack.config.babel.js",
    "build:test": "cross-env NODE_ENV=production webpack --env test --config  ./webpack/webpack.config.babel.js",
    "build:dev": "cross-env NODE_ENV=production webpack --env dev --config  ./webpack/webpack.config.babel.js"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "verbose": true,
    "transform": {
      "^.+\\.(ts|js)x?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/test/__mocks__/styleMock.js"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/test/tsconfig.test.json"
      }
    }
  },
  "browserslist": [
    "> 1%",
    "last 10 version",
    "not dead",
    "ie >= 9"
  ],
  "dependencies": {
    "antd": "~4.12.2",
    "axios": "~0.21.1",
    "classnames": "~2.2.6",
    "femo": "~1.3.2",
    "path-to-regexp": "~6.2.0",
    "react": "~17.0.1",
    "react-dom": "~17.0.1",
    "react-perfect-scrollbar": "~1.5.8",
    "react-router-dom": "~5.2.0",
    "ua-parser-js": "~0.7.24"
  },
  "devDependencies": {
    "@babel/cli": "~7.11.6",
    "@babel/core": "~7.11.6",
    "@babel/plugin-proposal-class-properties": "~7.8.3",
    "@babel/plugin-syntax-dynamic-import": "~7.8.3",
    "@babel/plugin-transform-runtime": "~7.9.6",
    "@babel/preset-env": "~7.4.4",
    "@babel/preset-react": "~7.10.4",
    "@babel/register": "~7.11.5",
    "@babel/runtime-corejs2": "~7.9.6",
    "@babel/runtime-corejs3": "~7.9.6",
    "@svgr/webpack": "~5.4.0",
    "@types/classnames": "~2.2.10",
    "@types/react": "~16.9.35",
    "@types/react-dom": "~16.9.8",
    "@types/react-router-dom": "~5.1.5",
    "@types/ua-parser-js": "~0.7.35",
    "@typescript-eslint/eslint-plugin": "~2.31.0",
    "@typescript-eslint/parser": "~2.31.0",
    "autoprefixer": "~9.7.6",
    "babel-loader": "~8.1.0",
    "babel-plugin-import": "~1.13.0",
    "clean-webpack-plugin": "~3.0.0",
    "cross-env": "~7.0.2",
    "css-loader": "~3.5.3",
    "eslint": "~6.8.0",
    "eslint-config-airbnb-base": "~14.1.0",
    "eslint-config-prettier": "~6.11.0",
    "eslint-import-resolver-alias": "~1.1.2",
    "eslint-loader": "~4.0.2",
    "eslint-plugin-import": "~2.20.2",
    "eslint-plugin-jest": "~23.10.0",
    "eslint-plugin-react": "~7.19.0",
    "eslint-plugin-react-hooks": "~4.0.0",
    "file-loader": "~6.0.0",
    "html-webpack-plugin": "~5.2.0",
    "husky": "~4.2.5",
    "jest": "~26.0.1",
    "less": "~3.11.1",
    "less-loader": "~6.1.0",
    "lint-staged": "~10.2.2",
    "mini-css-extract-plugin": "~1.3.9",
    "optimize-css-assets-webpack-plugin": "~5.0.4",
    "postcss-loader": "~3.0.0",
    "prop-types": "~15.7.2",
    "react-hot-loader": "~4.13.0",
    "style-loader": "~1.2.1",
    "stylelint": "~13.3.3",
    "stylelint-config-standard": "~20.0.0",
    "ts-jest": "~26.5.0",
    "ts-loader": "~7.0.3",
    "typescript": "~3.8.3",
    "uglifyjs-webpack-plugin": "~2.2.0",
    "webpack": "~5.24.2",
    "webpack-cli": "~4.5.0",
    "webpack-dev-server": "~3.11.2"
  }
}
